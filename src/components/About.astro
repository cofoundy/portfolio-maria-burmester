---
import { siteConfig } from "../config";
---

<section id="skills" class="py-20 bg-gray-50" style={`--accent-color: ${siteConfig.accentColor}`}>
  <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
    <!-- Section header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Skills & Herramientas
      </h2>
      <p class="text-gray-500 text-lg">
        Tecnologías y metodologías que utilizo en mis proyectos
      </p>
    </div>

    <!-- Skills grid with María's tag style -->
    <div class="flex flex-wrap justify-center gap-3">
      {siteConfig.skills.map((skill, index) => {
        // Alternate between filled and outlined style
        const isFilled = index < 4;
        return (
          <span
            class={`px-5 py-2.5 rounded-full text-base font-medium transition-all duration-300 hover:scale-105 ${
              isFilled
                ? 'text-white'
                : 'bg-white text-gray-700 border border-gray-200 hover:border-[var(--accent-color)] hover:text-[var(--accent-color)]'
            }`}
            style={isFilled ? `background: ${siteConfig.accentColor}` : undefined}
          >
            {skill}
          </span>
        );
      })}
    </div>
  </div>
</section>

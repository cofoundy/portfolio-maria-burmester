---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 hidden md:block transition-all duration-300"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <nav class="max-w-6xl mx-auto px-8 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Name -->
      <a href="#hero" class="font-bold text-gray-900 hover:text-[var(--accent-color)] transition-colors">
        MFB
      </a>

      <!-- Nav links -->
      <ul class="flex items-center gap-8">
        {hasProjects && (
          <li>
            <a
              href="#projects"
              class="text-gray-600 hover:text-[var(--accent-color)] transition-colors font-medium text-sm"
            >
              Proyectos
            </a>
          </li>
        )}
        {hasExperience && (
          <li>
            <a
              href="#experience"
              class="text-gray-600 hover:text-[var(--accent-color)] transition-colors font-medium text-sm"
            >
              Experiencia
            </a>
          </li>
        )}
        {hasEducation && (
          <li>
            <a
              href="#education"
              class="text-gray-600 hover:text-[var(--accent-color)] transition-colors font-medium text-sm"
            >
              Educaci√≥n
            </a>
          </li>
        )}
        <li>
          <a
            href={`mailto:${siteConfig.social?.email}`}
            class="px-4 py-2 rounded-full text-white text-sm font-medium transition-all hover:opacity-90"
            style={`background: ${siteConfig.accentColor}`}
          >
            Contacto
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 50) {
      header?.classList.add("bg-white/90", "backdrop-blur-md", "shadow-sm");
    } else {
      header?.classList.remove("bg-white/90", "backdrop-blur-md", "shadow-sm");
    }
  });
</script>

---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section id="education" class="py-20 bg-gray-50" style={`--accent-color: ${siteConfig.accentColor}`}>
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
        <!-- Section header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Educación & Certificaciones
          </h2>
          <p class="text-gray-500 text-lg">
            Formación continua en diseño y experiencia de usuario
          </p>
        </div>

        <!-- Education grid -->
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {siteConfig.education.map((edu) => (
            <div class="bg-white rounded-2xl p-6 hover:shadow-lg transition-all duration-300 border border-gray-100 group">
              <div class="flex flex-col h-full">
                <span
                  class="inline-block px-3 py-1 rounded-full text-xs font-medium text-white w-fit mb-4"
                  style={`background: ${siteConfig.accentColor}`}
                >
                  {edu.dateRange}
                </span>

                <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-[var(--accent-color)] transition-colors">
                  {edu.degree}
                </h3>

                <p class="text-gray-600 text-sm mb-4">
                  {edu.school}
                </p>

                {edu.achievements && edu.achievements.length > 0 && (
                  <ul class="space-y-1 mt-auto">
                    {edu.achievements.map((achievement) => (
                      <li class="flex items-start text-gray-500 text-sm">
                        <span
                          class="inline-block w-1 h-1 rounded-full mt-2 mr-2 flex-shrink-0"
                          style={`background: ${siteConfig.accentColor}`}
                        />
                        {achievement}
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
